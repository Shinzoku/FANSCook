{% extends 'public/public.html.twig' %}

{% block title %}Articles{% endblock %}

{% block container %}

    <div class="col-lg-12">
        <h1 class="text-center mt-5 mb-5">{{ article.titre }}</h1>
        <div class="card p-0 col-lg-7 mb-5 mx-auto borderCo">
            <img src="{{ asset('assets/img/' ~ article.image) }}" class="imgCard card-img-top" id="liste" alt="...">
