{% extends 'admin/admin.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block container %}
    <div class="card-body text-center col-lg-5 mt-5 mx-auto">
        <h1 class="mb-4">Liste des Articles</h1>
        <table id="liste" class="table table-dark justify-content-center">
            <thead>
            <tr>
                <th class="th-sm text-center">ID</th>

                <th class="th-sm text-center">Titre</th>

                <th class="th-sm text-center">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="...">
                        <a href="{{ path('admin_articles_show',{'id': article.id}) }}" type="button" class="btn btn-light">Voir</a>
                        <a href="{{ path('admin_articles_edit',{'id': article.id}) }}" type="button" class="btn btn-info">Modiffier</a>
                        {{ include('admin/articles/_delete_form.html.twig') }}
                    </div>
                </td>
            {% endfor %}
            </tr>
            </tbody>
        </table>
        <div class="text-right pr-5 col-md-12">
            <a href="{{ path('articles_new') }}" type="button" class="btn btn-success mt-3 mb-3">Ajouter</a>
        </div>
    </div>
{% endblock %}
